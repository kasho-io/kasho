# USE THIS FILE TO CREATE a .env

# Redis connection for pg-change-stream
KV_URL=redis://redis:6379

# Change stream service for pg-translicator
CHANGE_STREAM_SERVICE_ADDR=pg-change-stream:50051

# License service address
LICENSING_SERVICE_ADDR=licensing:50052

# Port configuration notes:
# - pg-change-stream listens on port 50051 (configurable via GRPC_PORT env var in its container)
# - licensing service listens on port 50052 (configurable via GRPC_PORT env var in its container)
# Both services use gRPC standard port range (50000+)

# Primary database URL for pg-change-stream
# Format: postgresql://user:password@host:port/database?sslmode=disable
PRIMARY_DATABASE_URL=postgresql://kasho:kasho@postgres-primary:5432/primary_db?sslmode=disable

# Replica database URL for pg-translicator
# Format: postgresql://user:password@host:port/database?sslmode=disable
REPLICA_DATABASE_URL=postgresql://kasho:kasho@postgres-replica:5432/replica_db?sslmode=disable

# Database configuration for docker-compose PostgreSQL containers
PRIMARY_DATABASE_SU_USER=postgres
PRIMARY_DATABASE_SU_PASSWORD=postgres
PRIMARY_DATABASE_DB=primary_db
REPLICA_DATABASE_SU_USER=postgres
REPLICA_DATABASE_SU_PASSWORD=postgres
REPLICA_DATABASE_DB=replica_db

# Homepage app port configuration
APP_HOMEPAGE_PORT=3000

# Demo app port configuration
APP_DEMO_PORT=3001

# Docs app port configuration
APP_DOCS_PORT=3002
