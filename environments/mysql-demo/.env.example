# Environment Configuration for MySQL Demo
# Copy this file to .env and modify as needed:
#   cp .env.example .env

# Redis connection for mysql-change-stream
KV_URL=redis://redis:6379

# Change stream service for translicator
CHANGE_STREAM_SERVICE_ADDR=mysql-change-stream:50051

# Primary database URL for mysql-change-stream
# Format: mysql://user:password@host:port/database
PRIMARY_DATABASE_URL=mysql://kasho:kasho@mysql-primary:3306/primary_db

# Replica database URL for translicator
# Format: mysql://user:password@host:port/database
REPLICA_DATABASE_URL=mysql://kasho:kasho@mysql-replica:3306/replica_db

# Database type for translicator
DATABASE_TYPE=mysql

# Database configuration for docker-compose MySQL containers
PRIMARY_DATABASE_SU_PASSWORD=rootpassword
PRIMARY_DATABASE_DB=primary_db
PRIMARY_DATABASE_KASHO_USER=kasho
PRIMARY_DATABASE_KASHO_PASSWORD=kasho
REPLICA_DATABASE_SU_PASSWORD=rootpassword
REPLICA_DATABASE_DB=replica_db
REPLICA_DATABASE_KASHO_USER=kasho
REPLICA_DATABASE_KASHO_PASSWORD=kasho
